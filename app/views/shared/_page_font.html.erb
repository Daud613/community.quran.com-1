<style>
  <% font_ids(verses).each do |i| %>
  @font-face {
      font-family: 'p<%= i %>-v2';
      src: local(QCF200<%=i%>),
      url('<%= asset_url "quran_fonts/v2/woff2/p#{i}.woff2" %>') format('woff2'),
      url('<%= asset_url "quran_fonts/v2/woff/p#{i}.woff" %>') format('woff'),
      url('<%= asset_url "quran_fonts/v2/ttf/p#{i}.ttf" %>') format('truetype');
      font-display: swap;
  }

  @font-face {
      font-family: 'p<%= i %>-v1';
      src: local(QCF_P<%=i.to_s.rjust(3, '0')%>),
      url('<%= asset_url "quran_fonts/v1/woff2/p#{i}.woff2"%>'),
      url('<%= asset_url "quran_fonts/v1/woff/p#{i}.woff" %>') format('woff'),
      url('<%= asset_url "quran_fonts/v1/ttf/p#{i}.ttf" %>') format('truetype');
      font-display: swap;
  }
  .p<%= i %>-v1 {
      font-size: 30px;
      font-family: 'p<%=i%>-v1';
  }
  .p<%= i %>-v2 {
      font-size: 30px;
      font-family: 'p<%=i%>-v2';
  }
  <% end %>
</style>
