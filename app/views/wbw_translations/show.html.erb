<div class="bs-docs-section">
  <h1 class="page-header">
    Word by Word data of ayah: <%= @verse.verse_key %>

    <span class=" pull-right">
      <%= link_to 'Contribute', new_wbw_translation_path(ayah: @verse.id), class: 'btn btn-success' %>

      <%= link_to 'Previous ayah', wbw_translation_path(@verse.id - 1), class: 'btn btn-success' %>
      <%= link_to 'Next ayah', wbw_translation_path(@verse.id + 1), class: 'btn btn-success' %>

      <%= link_to 'Back to filter', wbw_translations_path, class: 'btn btn-success' %>
    </span>
  </h1>

  <div class="bs-callout bs-callout-info alert alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
    <h2>
      Click on <code>Contribute</code> button and update data if you found any issue.
    </h2>

    <div class="row">
      <b>Text Madani:</b>
      <p class="madani"> <%= @verse.text_madani %></p>
    </div>

    <div class="row">
      <b>Text Indopak:</b> <br/>

      <p class="indopak"> <%= @verse.text_indopak %></p>
    </div>
  </div>
</div>

<p class="lead">
  Proofreading progress
<div class="progress">
  <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="<%= @verse.urdu_wbw_translation_progress %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 1em;width: <%= @verse.urdu_wbw_translation_progress %>%;">
    <%= @verse.urdu_wbw_translation_progress %>%
  </div>
</div>
</p>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Word id</th>
    <th>IndoPak text</th>
    <th>Uthmani text</th>
    <th>Translation</th>
    <th>Proofreading</th>
  </tr>
  </thead>

  <tbody>
  <% @verse.words.order('position asc').each do |word| %>
    <tr>
      <th scope="row"><%= word.position %></th>

      <td class="indopak">
        <%= word.wbw_translation&.indopak_text %>
      </td>

      <td class="madani">
        <%= word.wbw_translation&.text_madani %>
      </td>

      <td class="urdu">
        <%= word.wbw_translation&.text %>
      </td>

      <td>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>


