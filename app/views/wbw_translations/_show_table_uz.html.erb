<table class="table table-hover">
  <thead>
  <tr>
    <th>Word id</th>
    <th>Uthmani text</th>
    <th>Eglish translation</th>
    <th>Uzbek Translation</th>
    <th>Proofreading</th>
  </tr>
  </thead>

  <tbody>
  <% @verse.words.order('position asc').each do |word| %>
    <tr>
      <th scope="row"><%= word.position %></th>

      <td>
         <span class="madani">
        <%= word.text_uthmani %>
        </span>
      </td>

      <td>
        <%= word.en_translation&.text %>
      </td>

      <td>
        <%= word.uz_wbw_translation&.text %>
      </td>

      <td>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>